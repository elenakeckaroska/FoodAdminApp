@model FoodAdmin.Models.UserLoginDto
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

@{
    Layout = null;
}
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Login</h1>
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Home" method="post">

        <div class="logindiv">

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <div class="btn-submit col-sm-12">
                    <button type="submit" class="btn btn-success">Login</button>

                </div>
            </div>
            <div class="row col-sm-12">
                <a class="col-sm-12" asp-action="Register" asp-controller="account">Don't have an account?Click to Register</a>

            </div>
        </div>
    </form>
</div>
